# 鲸落 - Docker环境变量配置示例

# 应用配置
FLASK_ENV=development
FLASK_APP=app
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-change-in-production

# 数据库配置
DATABASE_URL=postgresql://taifish_user:taifish_pass@postgres:5432/taifish_dev
POSTGRES_DB=taifish_dev
POSTGRES_USER=taifish_user
POSTGRES_PASSWORD=taifish_pass

# Redis配置
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=taifish_redis_pass

# Celery配置
CELERY_BROKER_URL=redis://:taifish_redis_pass@redis:6379/0
CELERY_RESULT_BACKEND=redis://:taifish_redis_pass@redis:6379/0

# 外部数据库配置（示例）
SQL_SERVER_HOST=192.168.1.100
SQL_SERVER_PORT=1433
MYSQL_HOST=192.168.1.101
MYSQL_PORT=3306
ORACLE_HOST=192.168.1.102
ORACLE_PORT=1521

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=/app/userdata/logs/app.log

# 文件上传配置
UPLOAD_FOLDER=/app/userdata/uploads
MAX_CONTENT_LENGTH=10485760  # 10MB

# 缓存配置
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://redis:6379/1

# 安全配置
BCRYPT_LOG_ROUNDS=12
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# 开发配置
DEBUG=True
TESTING=False
WTF_CSRF_ENABLED=True

# 生产配置（生产环境时使用）
# FLASK_ENV=production
# DEBUG=False
# WTF_CSRF_ENABLED=True
# SECRET_KEY=your-production-secret-key
# JWT_SECRET_KEY=your-production-jwt-secret
