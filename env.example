# 泰摸鱼吧 - 环境变量配置示例
# 复制此文件为 .env 并修改相应配置

# Flask配置
FLASK_ENV=development
FLASK_APP=app
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# 数据库配置
DATABASE_URL=postgresql://taifish_user:taifish_pass@localhost:5432/taifish_dev
POSTGRES_DB=taifish_dev
POSTGRES_USER=taifish_user
POSTGRES_PASSWORD=taifish_pass
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=taifish_redis_pass
REDIS_HOST=localhost
REDIS_PORT=6379

# 外部数据库配置
# SQL Server
SQL_SERVER_HOST=192.168.1.100
SQL_SERVER_PORT=1433
SQL_SERVER_USERNAME=sa
SQL_SERVER_PASSWORD=your_sql_server_password

# MySQL
MYSQL_HOST=192.168.1.101
MYSQL_PORT=3306
MYSQL_USERNAME=root
MYSQL_PASSWORD=your_mysql_password

# Oracle
ORACLE_HOST=192.168.1.102
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=ORCL
ORACLE_USERNAME=system
ORACLE_PASSWORD=your_oracle_password

# 应用配置
APP_NAME=泰摸鱼吧
APP_VERSION=1.0.0
DEBUG=True
TESTING=False

# 安全配置
BCRYPT_LOG_ROUNDS=12
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# 缓存配置
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TIMEOUT=300

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=userdata/logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# 文件上传配置
UPLOAD_FOLDER=userdata/uploads
MAX_CONTENT_LENGTH=16777216

# 邮件配置（可选）
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password

# 监控配置
ENABLE_MONITORING=True
PROMETHEUS_PORT=9090

# 备份配置
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
