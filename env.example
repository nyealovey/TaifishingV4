# 泰摸鱼吧 - 环境变量配置示例
# 复制此文件为 .env 并修改相应的值

# 应用配置
FLASK_ENV=development
FLASK_APP=app
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-change-in-production

# 数据库配置
DATABASE_URL=postgresql://taifish_user:Taifish2024!@localhost:5432/taifish_dev

# Redis配置
REDIS_URL=redis://:Taifish2024!@localhost:6379/0
REDIS_PASSWORD=Taifish2024!

# 缓存配置
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://:Taifish2024!@localhost:6379/0
CACHE_DEFAULT_TIMEOUT=300

# 安全配置
BCRYPT_LOG_ROUNDS=12
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# 文件上传配置
UPLOAD_FOLDER=userdata/uploads
MAX_CONTENT_LENGTH=16777216

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=userdata/logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# 外部数据库配置
SQL_SERVER_HOST=localhost
SQL_SERVER_PORT=1433
SQL_SERVER_USERNAME=sa
SQL_SERVER_PASSWORD=

MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USERNAME=root
MYSQL_PASSWORD=

ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=ORCL
ORACLE_USERNAME=system
ORACLE_PASSWORD=

# 应用配置
APP_NAME=泰摸鱼吧
APP_VERSION=1.0.0

# 监控配置
ENABLE_MONITORING=True
PROMETHEUS_PORT=9090

# 备份配置
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
