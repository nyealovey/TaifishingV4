# Flask容器化后的Nginx配置
# 适用于Flask应用运行在Docker容器中的场景

upstream whalefall_backend {
    # 方案1：使用容器名（推荐）
    server whalefall_app:5001;
    
    # 方案2：使用服务名（如果使用docker-compose up同时启动）
    # server whalefall:5001;
    
    # 方案3：负载均衡（多个Flask实例）
    # server whalefall_app_1:5001;
    # server whalefall_app_2:5001;
    # server whalefall_app_3:5001;
}

server {
    listen 80;
    server_name localhost;
    
    # 客户端最大请求体大小
    client_max_body_size 16M;
    
    # 代理配置
    location / {
        proxy_pass http://whalefall_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # 超时配置
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
    
    # 静态文件缓存
    location /static/ {
        proxy_pass http://whalefall_backend;
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
}

